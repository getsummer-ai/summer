{
  "private": true,
  "scripts": {
    "lint": "vue-tsc --noEmit && yarn lint-global && yarn lint-svelte && yarn lint-vue",
    "lint-global": "eslint 'app/frontend/**/*.{js,ts,tsx}' --fix --ignore-path .gitignore --ignore-pattern 'app/frontend/svelte/*' --ignore-pattern 'app/frontend/vue/*'",
    "lint-svelte": "eslint -c 'app/frontend/svelte/.eslintrc.cjs' 'app/frontend/svelte/**/*.{js,svelte,ts,tsx}' --fix --ignore-path .gitignore",
    "lint-svelte-debug": "DEBUG=typescript-eslint:* eslint -c 'app/frontend/svelte/.eslintrc.cjs' 'app/frontend/svelte/**/*.{js,svelte,ts,tsx}' --fix --ignore-path .gitignore",
    "lint-vue": "eslint -c 'app/frontend/vue/.eslintrc.cjs' 'app/frontend/vue/**/*.{js,vue,ts,tsx}' --fix --ignore-path .gitignore",
    "prepare": "husky install",
    "lint-staged": "lint-staged",
    "test-specs": "bundle exec rspec spec",
    "dev": "./bin/vite dev",
    "build": "./bin/vite build",
    "build-button-init-app": "vite build --config vite.config.init.lib.mts --mode=production",
    "build-button-app": "vite build --config vite.config.app.lib.mts --mode=production"
  },
  "dependencies": {
    "@babel/types": "^7.23.6",
    "@heroicons/vue": "^2.1.1",
    "@hotwired/stimulus": "^3.2.2",
    "@hotwired/turbo-rails": "^8.0.4",
    "@tailwindcss/typography": "^0.5.10",
    "@vueuse/core": "^10.7.2",
    "axios": "^1.6.5",
    "daisyui": "^4.7.3",
    "dayjs": "^1.11.10",
    "mjml": "^4.14.1",
    "notivue": "^2.1.1",
    "pinia": "^2.1.7",
    "stimulus-use": "^0.52.2",
    "tua-body-scroll-lock": "^1.5.0",
    "vue": "^3.4.14",
    "vue-query": "^1.26.0",
    "vue-router": "^4.2.5",
    "vue3-side-panel": "^1.3.0"
  },
  "devDependencies": {
    "@prettier/plugin-ruby": "^3.2.2",
    "@rushstack/eslint-patch": "^1.7.0",
    "@sveltejs/vite-plugin-svelte": "^3.0.1",
    "@tsconfig/svelte": "^5.0.2",
    "@types/node": "^20.11.4",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.20.0",
    "@vitejs/plugin-vue": "^5.0.3",
    "@vue/eslint-config-prettier": "^7.1.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-custom-alias": "^1.3.2",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-svelte": "^2.35.1",
    "eslint-plugin-vue": "^9.20.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "postcss": "^8.4.33",
    "prettier": "2.2.1",
    "prettier-plugin-erb": "^0.4.0",
    "prettier-plugin-svelte": "2.10.1",
    "sass": "^1.69.7",
    "svelte": "^4.2.8",
    "svelte-check": "^3.6.3",
    "svelte-eslint-parser": "^0.33.1",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.0.4",
    "vite": "^5.1.4",
    "vite-plugin-ruby": "^5.0.0",
    "vite-tsconfig-paths": "^4.3.1",
    "vue-tsc": "^1.8.27"
  },
  "resolutions": {
    "**/tsconfig-paths/json5": "^2.2.3"
  },
  "lint-staged": {
    "*.{js,css,scss,md,vue,svelte,json}": "prettier --write"
  }
}
