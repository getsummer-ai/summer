<%
  # @type [Project::ProjectAppearanceSettings]
  settings = @project_appearance_settings
  frame_color_class = case settings.frame_theme
                      when 'white' then 'bg-white'
                      when 'black' then 'bg-black'
                      else ''
                      end
  button_color_class = case settings.button_theme
                       when 'white' then 'bg-white'
                       when 'black' then 'bg-black'
                       else ''
                       end

%>
<div id="setup-appearance-component" class="p-6 md:p-10 w-52 bg-default flex-1 flex justify-center items-center flex-col">
  <div class="w-48 h-36 md:w-56 md:h-44 rounded-lg <%=frame_color_class %>"></div>
  <div class="w-16 md:w-24 h-6 <%=button_color_class %> rounded-3xl mt-4"></div>
</div>
