<% is_turbo = turbo_frame_request_id.present? %>
<%= turbo_conditional_tag "login-form", is_turbo do %>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), builder: DaisyBuilder) do |f| %>
    <div class="form-control">
      <%= f.label :email, t('.email') %>
      <%= f.email_field :email, autofocus: !is_turbo, required: true, autocomplete: 'email' %>
    </div>

    <div class="form-control mt-2">
      <%= f.label :password, t('.password') %>
      <%= f.password_field :password, autocomplete: 'current-password' %>
    </div>

    <% if is_turbo && (resource.errors.any? || flash[:alert]) %>
      <% if flash[:alert] %>
        <div class="mt-2 mb-2">
          <div class="text-xs absolute -mt-1">
            <%= flash[:alert] %>
          </div>
        </div>
      <% end %>

      <% resource.errors.full_messages.each do |message| %>
        <div class="text-xs absolute -mt-1">
          <%= message %>
        </div>
      <% end %>
    <% end %>

    <div class="form-control mt-7">
      <%= f.submit t('.sign_in'), class: 'btn rounded-lg btn-md btn-neutral btn-active btn-block' %>
    </div>
  <% end %>
  <div class="divider mt-8"><%= t('.or') %></div>

  <div class="mt-6 text-center">
    <% if devise_mapping.omniauthable? %>
      <%= form_for "Login",
                   # url: user_google_oauth2_omniauth_authorize_path,
                   url: omniauth_authorize_path(resource_name, :google_oauth2),
                   method: :post,
                   data: { turbo: "false" } do |f| %>
        <%= f.button(type: 'submit', class: "btn btn-block rounded-lg") do %>
          <svg
            class="w-4 h-4"
            version="1.1"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 48 48"
            xmlns:xlink="http://www.w3.org/1999/xlink"
            style="display: block;"
          >
            <path
              fill="#EA4335"
              d="M24 9.5c3.54 0 6.71 1.22 9.21 3.6l6.85-6.85C35.9 2.38 30.47 0 24 0 14.62 0 6.51 5.38 2.56 13.22l7.98 6.19C12.43 13.72 17.74 9.5 24 9.5z"
            ></path>
            <path
              fill="#4285F4"
              d="M46.98 24.55c0-1.57-.15-3.09-.38-4.55H24v9.02h12.94c-.58 2.96-2.26 5.48-4.78 7.18l7.73 6c4.51-4.18 7.09-10.36 7.09-17.65z"
            ></path>
            <path
              fill="#FBBC05"
              d="M10.53 28.59c-.48-1.45-.76-2.99-.76-4.59s.27-3.14.76-4.59l-7.98-6.19C.92 16.46 0 20.12 0 24c0 3.88.92 7.54 2.56 10.78l7.97-6.19z"
            ></path>
            <path
              fill="#34A853"
              d="M24 48c6.48 0 11.93-2.13 15.89-5.81l-7.73-6c-2.15 1.45-4.92 2.3-8.16 2.3-6.26 0-11.57-4.22-13.47-9.91l-7.98 6.19C6.51 42.62 14.62 48 24 48z"
            ></path>
            <path fill="none" d="M0 0h48v48H0z"></path>
          </svg>
          <%= t('.sign_in_via_google') %>
        <% end %>
      <% end %>
    <% end %>
  </div>
<% end %>
