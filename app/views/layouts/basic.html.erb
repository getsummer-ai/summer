<!DOCTYPE html>
<html data-theme="lofi">
  <head>
    <title>Summer</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <% if content_for?(:meta) %>
      <%= yield(:meta) %>
    <% end %>
    <%= vite_stylesheet_tag "global.scss" %>
    <%= vite_client_tag %>
    <%= vite_typescript_tag 'main' %>
    <% if content_for?(:js) %>
      <%= yield(:js) %>
    <% end %>
    <%#= vite_stylesheet_tag "main.scss", preload_links_header: true %>
    <%= vite_stylesheet_tag "main.scss" %>
  </head>
  <% environment_hash = { environment: Rails.env, locale: I18n.locale } %>
  <body class="light" data-init="<%= environment_hash.to_json %>">
    <div class="min-h-screen flex flex-col justify-between dark:bg-black">
      <div class="container mx-auto pt-24 px-2">
        <% if content_for?(:header) %>
          <%= yield(:header) %>
        <% end %>
      </div>
      <div class="mb-auto">
        <%= content_for?(:content) ? yield(:content) : yield %>
      </div>
      <%= render 'layouts/shared/footer_small' %>
    </div>
    <%= render TurboModalContainer::Component.new %>
  </body>
</html>


