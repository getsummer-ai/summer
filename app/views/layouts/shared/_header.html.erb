<div class="navbar shadow-md bg-base-200 rounded-xl border-b-accent mt-2">
  <div class="navbar-start">
    <div class="dropdown">
      <label tabindex="0" class="btn btn-ghost btn-circle">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-5 w-5"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h7"
          />
        </svg>
      </label>
      <ul
        tabindex="0"
        class="menu menu-sm dropdown-content mt-4 z-[1] p-2 shadow bg-base-200 rounded [&_li>*]:rounded w-52"
      >
        <li>
          <%= link_to 'Homepage', root_path %>
        </li>
        <li>
          <%= link_to 'Images', user_app_path %>
        </li>
        <li><%= link_to 'About', about_path %></li>
      </ul>
    </div>
  </div>
  <div class="navbar-center">
    <%=
      link_to(
        'RESUMEN',
        root_path,
        class: 'normal-case font-silkscreen text-3xl border-b-4 tracking-tight border-accent-focus font-extrabold',
      )
    %>
  </div>
  <div class="navbar-end">
    <button class="btn btn-ghost btn-circle">
      <span class="indicator block">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-5 w-5"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"
          />
        </svg>
        <span class="badge badge-xs badge-primary indicator-item"></span>
      </span>
    </button>
    <div class="dropdown dropdown-end">
      <label tabindex="0" class="btn btn-ghost btn-circle avatar">
        <span
          class="w-10 h-10 flex rounded-full text-base-100 text-xl
          bg-gradient-to-r from-orange-600 to-orange-500
          justify-center items-center"
        >
          <%= current_user.email[0] %>
        </span>
      </label>
      <ul
        tabindex="0"
        class="menu menu-sm dropdown-content mr-[-2px] mt-4 z-[1] shadow rounded bg-base-200 [&_li>*]:rounded w-52"
      >
        <li>
          <a class="justify-between">Profile<span class="badge">New</span></a>
        </li>
        <li>
          <%= link_to 'Settings', edit_user_registration_path %>
        </li>
        <li>
          <%#= link_to 'Logout', destroy_user_session_path, method: :delete %>
          <%= button_to 'Logout', destroy_user_session_path, method: :delete, form_class: 'trigger-submit-form' %>
        </li>
      </ul>
    </div>
  </div>
</div>
