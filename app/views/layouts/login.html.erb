<% unless content_for?(:meta) %>
  <% content_for :meta do %>
    <title>Summer AI | Login</title>
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <meta name="description" content="Transform your blog with AI summary button.">
    <meta property="og:title" content="Summer AI | Login">
  <% end %>
<% end %>

<% content_for :js do %>
  <%= vite_typescript_tag 'login' %>
<% end %>
<% content_for :html_class do %>
  bg-[#bdb963] md:bg-yellow
<% end %>

<% content_for :content do %>
  <div class="flex flex-col md:flex-row min-h-screen">
    <div class="image bg-[#2FA8FF] md:w-1/2 relative overflow-hidden flex flex-col justify-between text-white">
      <div class="w-[1240px] h-[1240px] left-0 top-[-750px] absolute bg-[#FFCF24] blur-5xl rounded-full z-0"></div>
      <div class="m-4 z-0">
        <a href="https://getsummer.ai">
          <%=render LogoComponent.new(color: 'white') %>
        </a>
      </div>
    </div>
    <div class="md:w-1/2 bg-white flex flex-column justify-center items-center md:min-h-screen flex-grow">
      <div class="w-96 pb-5">
        <%= yield %>
        <div class="mt-4">
          <%= render 'layouts/shared/alerts', is_persistent: true %>
        </div>
        <% unless user_signed_in? %>
          <div class="mt-6 px-1">
            <%= render 'devise/shared/links' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>

<%= render template: 'layouts/application' %>
