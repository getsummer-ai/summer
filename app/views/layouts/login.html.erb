<% content_for :js do %>
  <%= vite_typescript_tag 'login' %>
<% end %>
<% content_for :bg_color do %>
  bg-yellow
<% end %>

<% content_for :content do %>
  <div class="flex flex-row h-full">

    <div class="image bg-[#2FA8FF] w-1/2 relative overflow-hidden">
      <div class="w-[1240px] h-[1240px] right-[-500px] top-[-640px] absolute bg-[#FFCF24] blur-[200px] rounded-full"></div>
    </div>
    <div class="w-1/2 bg-white flex justify-center min-h-screen flex-column overflow-scroll">
      <div class="w-96 mt-16">
        <%= yield %>
        <div class="mt-4">
          <%= render 'layouts/shared/alerts' %>
        </div>
        <div class="mt-6 px-1">
          <%= render 'devise/shared/links' %>
        </div>
      </div>
    </div>
  </div>


<% end %>

<%= render template: 'layouts/application' %>
