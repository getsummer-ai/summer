<!DOCTYPE html>
<% html_class = content_for?(:html_class) ? yield(:html_class) : '' %>
<% body_class = content_for?(:body_class) ? yield(:body_class) : '' %>
<html class="<%= html_class.strip %>" data-theme="lofi">
  <head>
    <title>Summer</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= render 'layouts/shared/google_tag_head' %>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap"
      rel="stylesheet"
    />
    <%= vite_stylesheet_tag 'global.scss' %>
    <%= vite_client_tag %>
    <% if content_for?(:js) %>
      <%= yield(:js) %>
    <% end %>
    <%= vite_client_tag %>
    <%= vite_typescript_tag 'application' %>
  </head>
  <body class="<%= body_class.strip %>">
    <%= render 'layouts/shared/google_tag_body' %>
    <%= content_for?(:content) ? yield(:content) : yield %>
  </body>
</html>
