<h2 class="text-3xl font-semibold">Pages</h2>
<p class="opacity-50 mt-1 font-light">Gain insights on how people use Summer on Enty Blog</p>

<div class="grid gap-4 grid-flow-col grid-cols-3 mt-4">
  <div class="shadow p-5 rounded-xl border">
    <div>
      <img src="<%= vite_asset_path('assets/icons/pages.svg') %>" class="summer-icon-sm" alt="Selector Icon" />
      <span class="align-middle">Pages</span>
    </div>
    <div class="text-xl font-bold">32</div>
  </div>
  <div class="shadow p-5 rounded-xl border">
    <div>
      <img
        src="<%= vite_asset_path('assets/icons/eye.svg') %>"
        class="summer-icon-sm"
        alt="Selector Icon"
        />
      <span class="align-middle">Button Showed</span>
    </div>
    <div class="text-xl font-bold">1898</div>
  </div>
  <div class="shadow p-5 rounded-xl border">
    <div>
      <img
        src="<%= vite_asset_path('assets/icons/click.svg') %>"
        class="summer-icon-sm"
        alt="Selector Icon"
        />
      <span class="align-middle">Button Clicked</span>
    </div>
    <div class="text-xl font-bold">512</div>
  </div>
</div>
<% if @pages.length > 0 %>
  <div class="mt-16">
    <h2 class="text-2xl font-semibold">All Pages</h2>
    <p class="opacity-50 mt-1 font-light mb-10">
      Summer is disabled on the pages with less than 500 symbols by default. You can turn it on manually.
    </p>
    <% @pages.each_with_index do |page, i|%>
      <%= render ProjectPageRowComponent.new(project: @current_project, page:, has_top_border: i === 0) %>
    <% end %>
  </div>
<% end %>
