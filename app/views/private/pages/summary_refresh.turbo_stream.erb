<% if @error_message.nil? %>
  <%= turbo_stream.update dom_id(@project_page, :summary) do %>
    <%= sanitize @project_page.decorate.summary_html %>
    <% flash.now[:notice] = 'The summary has been updated' %>
    <%= turbo_stream.prepend "flash", partial: "layouts/shared/alerts" %>
<% end
else
  flash.now[:alert] = @error_message
  concat turbo_stream.prepend "flash", partial: "layouts/shared/alerts"
end
%>
