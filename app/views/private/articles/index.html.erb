<% is_turbo = turbo_frame_request_id.present? %>

<%= turbo_conditional_tag "project-#{@project.id}-articles", is_turbo do %>

  <% unless is_turbo %>
    <%= link_to '<- Go back', @project %>
  <% end %>

  <h1 class="text-2xl font-extrabold">Articles</h1>

  <div class="overflow-x-auto">
    <table class="table table-xs">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Article</th>
          <th>Summary</th>
          <th>Clicks</th>
          <th>Last Update</th>
        </tr>
      </thead>
      <tbody>
        <% @articles.each do |article| %>
          <tr>
            <th>1</th>
            <td><%= link_to article.title, project_article_url(@project, article), 'data-turbo-frame': "_top" %></td>
            <td><%=article.article %></td>
            <td><%=article.last_summary&.summary %></td>
            <td>0</td>
            <td>12/16/2020</td>
          </tr>
        <% end %>
        <tr>
          <th>2</th>
          <td>Let's start withHart Hagerty</td>
          <td>Desktop Support Technician...</td>
          <td>Zemlak, Daniel and Leannon...</td>
          <td>2</td>
          <td>12/5/2020</td>
        </tr>
        <tr>
          <th>3</th>
          <td>What does Brice Swyre like most?</td>
          <td>Brice Swyre is a well-known writer...</td>
          <td>Carroll Group....</td>
          <td>1</td>
          <td>8/15/2020</td>
        </tr>
      </tbody>
    </table>
  </div>
<% end %>
