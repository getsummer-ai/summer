<%
  is_persistent ||= false
  type ||= ''
  alert_class =
  case type
  when 'success'
    'alert-success'
  when 'error'
    'alert-danger'
  when 'warning'
    'alert-warning'
  when 'info'
    'alert-info'
  else
    ''
  end
%>
<div
  data-controller="alert"
  data-alert-persistent-value="<%=is_persistent.to_s %>"
  class="alert <%= alert_class %> rounded-xl text-base shadow mt-2 mb-2"
>
  <% if type == '' %>
    <svg
      xmlns="http://www.w3.org/2000/svg"
      fill="none"
      viewBox="0 0 24 24"
      class="stroke-info shrink-0 w-6 h-6"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
      ></path>
    </svg>
  <% else %>
    <svg
      xmlns="http://www.w3.org/2000/svg"
      fill="none"
      viewBox="0 0 24 24"
      class="stroke-current shrink-0 w-6 h-6"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
      ></path>
    </svg>
  <% end %>
  <div>
    <span><%= message %></span>
  </div>
  <button data-action="alert#hideAlert" class="btn btn-sm btn-circle btn-ghost">âœ•</button>
</div>
